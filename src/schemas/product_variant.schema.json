{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.tes4a.org/schemas/product_variant",
  "title": "product_variant",
  "description": "product_variant",
  "type": "object",
  "required": [],
  "unique": [],
  "properties": {
    "variant_id": {
      "type": "string"
    },
    "no": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "source_reference_id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "barcode": {
      "type": "string"
    },
    "weight": {
      "type": "number"
    },
    "weight_unit": {
      "type": "string"
    },
    "fulfillment_service": {
      "type": "string"
    },
    "requires_shipping": {
      "type": "boolean",
      "default": false
    },
    "delivery_time": {
      "type": "string"
    },
    "position": {
      "type": "number"
    },
    "images": {
      "type": "array",
      "items": {
        "$ref": "https://schema.tes4a.org/schemas/image"
      }
    },
    "option": {
      "type": "object",
      "properties": {
        "option_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "position": {
          "type": "number"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "price_settings": {
      "type": "object",
      "properties": {
        "price_type": {
          "type": "string",
          "enum": [
            "single",
            "multiple"
          ],
          "default": "single"
        },
        "use_price_list": {
          "type": "boolean",
          "default": false
        },
        "linked_price_list": {
          "type": "string"
        }
      }
    },
    "prices": {
      "types": "array",
      "items": {
        "$ref": "https://schema.tes4a.org/schemas/price",
        "type": "object",
        "properties": {
          "price_id": {
            "type": "string"
          }
        }
      }
    },
    "availability": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "location": {
            "type": "string"
          },
          "quantity": {
            "type": "number",
            "default": 0
          }
        }
      }
    },
    "availability_setting": {
      "type": "object",
      "properties": {
        "availabilty_type": {
          "type": "string",
          "enum": [
            "global",
            "location",
            "month_year"
          ],
          "default": "global"
        }
      }
    },
    "tax": {
      "type": "object",
      "properties": {
        "tax_id": {
          "type": "string"
        },
        "taxable": {
          "type": "boolean",
          "default": false
        },
        "code": {
          "type": "string"
        },
        "value": {
          "type": "number"
        }
      }
    },
    "vendor": {
      "type": "object",
      "properties": {
        "vendor_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "reference_id": {
          "type": "string"
        }
      }
    },
    "customs": {
      "type": "object",
      "properties": {
        "country_code_origin": {
          "type": "string"
        },
        "customs_tariff_number": {
          "type": "string"
        }
      }
    },
    "skus": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sku_id": {
            "type": "string"
          },
          "produced_at": {
            "type": "string"
          },
          "best_before": {
            "type": "string"
          },
          "batch": {
            "type": "string"
          },
          "serial_number": {
            "type": "string"
          }
        }
      }
    },
    "batches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "batch_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}
