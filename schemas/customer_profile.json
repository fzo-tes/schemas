{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "/schemas/customer_profile",
  "title": "customer_profile",
  "description": "customer_profile",
  "type": "object",
  "required": [],
  "unique": [],
  "allOf": [
    {
      "$ref": "./base.json"
    },
    {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "database": {
          "type": "string"
        },
        "customer_company_id": {
          "type": "string"
        },
        "country_code": {
          "type": "string"
        },
        "addresses": {
          "type": "array",
          "items": {
            "$ref": "./address.json"
          }
        },
        "description": {
          "type": "string"
        },
        "description_short": {
          "type": "string"
        },
        "description_search": {
          "type": "string"
        },
        "website": {
          "type": "string"
        },
        "handler": {
          "type": "string"
        },
        "image_main": {
          "type": "string"
        },
        "image_search": {
          "type": "string"
        },
        "image_logo": {
          "type": "string"
        },
        "is_visible": {
          "type": "boolean",
          "default": true
        }
      }
    }
  ]
}
