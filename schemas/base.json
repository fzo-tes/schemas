{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "/schemas/base",
  "title": "base",
  "description": "Basic schema for all objects",
  "type": "object",
  "properties": {
    "_id": {
      "type": "string"
    },
    "source_reference_id": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string"
    },
    "lastupdate_at": {
      "type": "string",
      "format": "date-time"
    },
    "lastupdate_by": {
      "type": "string"
    },
    "note": {
      "type": "string"
    },
    "is_deleted": {
      "type": "boolean",
      "default": false
    },
    "is_archived": {
      "type": "boolean",
      "default": false
    },
    "customfields": {
      "type": "object"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
